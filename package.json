{
  "name": "@clotheer/auth-service",
  "version": "1.0.0",
  "description": "The authentication server",
  "main": "main.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=dev nodemon src/server.ts",
    "format:test": "prettier . --check",
    "format:fix": "prettier . --write",
    "format": "npm run format:test && npm run format:fix",
    "eslint:test": "eslint .",
    "eslint:fix": "eslint . --fix",
    "eslint": "npm run eslint:test && npm run eslint:fix",
    "test": "npm run format:test && npm run eslint:test && npm run test:jest",
    "fix": "npm run format:fix && npm run eslint:fix",
    "test:jest": "jest --watch --runInBand",
    "prepare": "husky",
    "start": "ts-node src/index.ts",
    "typeorm": "typeorm-ts-node-commonjs"
  },
  "author": "Parvej <parvej.workarea@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.14.0",
    "@types/eslint__js": "^8.42.3",
    "@types/http-errors": "^2.0.4",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.8.6",
    "@types/supertest": "^6.0.2",
    "cross-env": "^7.0.3",
    "eslint": "^9.14.0",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.10",
    "prettier": "3.3.3",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.12.2"
  },
  "lint-staged": {
    "*.ts": [
      "npm run format:fix",
      "npm run eslint:fix"
    ]
  },
  "dependencies": {
    "@types/express": "^5.0.0",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "http-errors": "^2.0.0",
    "nodemon": "^3.1.7",
    "pg": "^8.4.0",
    "reflect-metadata": "^0.1.13",
    "typeorm": "0.3.20",
    "winston": "^3.16.0"
  }
